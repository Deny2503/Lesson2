@model Lesson2.Models.CardModel

<div class="bg-white rounded shadow-lg overflow-hidden transform transition duration-300 hover:scale-105 hover:shadow-2xl flex flex-col">
    <img src="@Model.ImageUrl" alt="@Model.Title" class="w-full h-100 object-cover">

    <div class="p-4 flex flex-col flex-grow">
        <h2 class="text-xl font-bold mb-2">@Model.Title</h2>
        <p class="text-gray-600 flex-grow mb-4">@Model.Description</p>
        <button class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700 transition duration-300 w-full">
            Детальніше
        </button>
    </div>
</div>