@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    
<h2>Task 1</h2>
<section class="min-h-screen flex items-center justify-center bg-gray-200">
    <div class="flex justify-between w-1/2">
        <button class="p-4 bg-green-500 text-white hover:bg-green-700">Кнопка 1</button>
        <button class="p-4 bg-green-500 text-white hover:bg-green-700">Кнопка 2</button>
        <button class="p-4 bg-green-500 text-white hover:bg-green-700">Кнопка 3</button>
    </div>
</section>

<h2>Task 2</h2>
<section class="p-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white p-4 rounded shadow-lg">Картка 1</div>
        <div class="bg-white p-4 rounded shadow-lg">Картка 2</div>
        <div class="bg-white p-4 rounded shadow-lg">Картка 3</div>
        <div class="bg-white p-4 rounded shadow-lg">Картка 4</div>
    </div>
</section>

<h2>Task 3</h2>
<section class="flex justify-center p-8">
    <form class="bg-white p-6 rounded shadow-md w-96 space-y-4">
        <input type="email" placeholder="Email"
            class="w-full py-2 px-4 border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 outline-none">
        <input type="password" placeholder="Password"
            class="w-full py-2 px-4 border-2 border-gray-300 rounded focus:ring-2 focus:ring-blue-500 outline-none">
        <button type="submit"
            class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-700 transition duration-300">
            Login
        </button>
    </form>
</section>

<h2>Task 4</h2>
<section class="flex flex-col items-center space-y-6 p-8">
    <div class="bg-white p-6 rounded shadow-lg transition duration-300 transform hover:scale-110 hover:rotate-5">
        <p class="text-lg font-semibold">Наведи на мене!</p>
    </div>
    <button class="px-4 py-2 bg-pink-500 text-white rounded animate-pulse">Pulse</button>
</section>

<h2>Task 5</h2>
<section class="p-12 bg-gradient-to-r from-blue-50 to-blue-100">
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold mb-4">Welcome to Our Landing Page</h1>
        <p class="text-lg text-gray-700 mb-6">This is a modern responsive design with TailwindCSS</p>
        <button class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-800 transition">
            Call to Action
        </button>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white rounded shadow-lg overflow-hidden hover:shadow-2xl transition">
            <img src="https://via.placeholder.com/400x200" alt="Image 1" class="w-full">
            <div class="p-4">
                <h2 class="font-bold text-xl mb-2">Feature 1</h2>
                <p class="text-gray-600">Some description about feature 1.</p>
            </div>
        </div>
        <div class="bg-white rounded shadow-lg overflow-hidden hover:shadow-2xl transition">
            <img src="https://via.placeholder.com/400x200" alt="Image 2" class="w-full">
            <div class="p-4">
                <h2 class="font-bold text-xl mb-2">Feature 2</h2>
                <p class="text-gray-600">Some description about feature 2.</p>
            </div>
        </div>
        <div class="bg-white rounded shadow-lg overflow-hidden hover:shadow-2xl transition">
            <img src="https://via.placeholder.com/400x200" alt="Image 3" class="w-full">
            <div class="p-4">
                <h2 class="font-bold text-xl mb-2">Feature 3</h2>
                <p class="text-gray-600">Some description about feature 3.</p>
            </div>
        </div>
    </div>
</section>
